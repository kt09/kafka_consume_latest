{
    "scenarioName": "Produce a message and Ack the topic metadata",
    "steps": [
        {
            "name": "load_kafka",
            "url": "kafka-topic:demo",
            "operation": "produce",
            "request": {
                "key": "${RANDOM.NUMBER}",
                "value": "Hello World"
            },
            "assertions": {
                "status" : "Ok",
                "recordMetadata" : {
                    "offset" : "$NOT.NULL",
                    "timestamp" : "$NOT.NULL",
                    "serializedKeySize" : -1,
                    "serializedValueSize" : 45,
                    "topicPartition" : {
                        "hash" : 3080612,
                        "partition" : 0,
                        "topic" : "demo"
                    }
                }
            }
        }
    ]
}
