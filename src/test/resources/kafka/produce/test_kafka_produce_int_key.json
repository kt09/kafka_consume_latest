{
    "scenarioName": "Produce a message to kafka topic - int Key",
    "steps": [
        {
            "name": "load_kafka",
            "url": "kafka-topic:demo-int-topic-2",
            "operation": "produce",
            "request": {
                "records":[
                    {
                        "key": 101,
                        "value": "Hello World"
                    }
                ]
            },
            "assertions": {
                "status" : "Ok",
                "recordMetadata" : "$NOT.NULL"
            }
        },
        {
            "name": "onload_kafka",
            "url": "kafka-topic:demo-int-topic-2",
            "operation": "unload",
            "request": {
                "consumer_properties": {
                    "commitSync":true,
                    "MAX_NO_OF_RETRY_POLLS_OR_TIME_OUTS": 5
                }
            },
            "assertions": {
                "size" : "$GT.0"
            }
        }

    ]
}
