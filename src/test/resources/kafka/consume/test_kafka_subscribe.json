{
    "scenarioName": "Unload - consume a message from kafka",
    "steps": [
        {
            "name": "load_kafka",
            "url": "kafka-topic:demo",
            "operation": "load",
            "request": {
                "key": "${RANDOM.NUMBER}",
                "value": "Hello World"
            },
            "assertions": {
                "status" : "Ok"
            }
        },
        {
            "name": "onload_kafka",
            "url": "kafka-topic:demo",
            "operation": "unload",
            "request": {
            },
            "assertions": {
                // this will 1  only when consumer does a commit i.e. commitAsync or sync,
                // otherwise 3 or more as earler messages will still be there
                "records.SIZE" : "$GT.0"
            }
        }
    ]
}
